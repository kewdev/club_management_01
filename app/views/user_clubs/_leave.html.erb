<div id="modal-leave-club" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h2 class="modal-title">
            <span class="fa fa-question-circle-o">
          <%= t "leave_question" %>
          </span>
        </h2>
      </div>
      <div class="modal-body">
        <%= form_for ReasonLeave.new, html: {class: "form-horizontal form-bordered" } do |f| %>
          <div class="form-modal">
            <fieldset>
              <div class="form-group">
                <label class="col-md-4 control-label"><%= t "content" %></label>
                <div class="col-md-8">
                  <%= f.text_area :content, class: "form-control", placeholder: t("content") %>
                  <%= f.hidden_field :club_id, value: @club.id %>
                </div>
              </div>
            </fieldset>
          </div>
          <div class="form-group form-actions">
            <div class="col-xs-12 text-right">
              <button type="button" class="btn btn-sm btn-default" data-dismiss="modal"><%= t "close" %></button>
              <%= f.submit :Send, class: "btn btn-sm btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
