<div class="media-container">
  <section class="site-section site-section-light site-section-top">
    <div class="container">
      <div class="join-cancel-toggle-container">
        <%= render "user_clubs/join_cancel_toggle" %>
      </div>
      <h1 class="animation-slideDown"><strong><%= @club.name %></strong></h1>
      <span class="animation-slideUp hidden-xs rating-container">
        <%= render "ratings/rating" %>
      </span>
      <p class="h3 animation-slideUp hidden-xs">
        <%= @club.description %>
      </p>
    </div>
    <div class="container"></div>
  </section>
  <%= image_tag @club.image, class: "media-image animation-pulseSlow" %>
</div>
